<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vidmatemaster.fastvideodownloader.allvideodownloader.hdvideodownloader.howtodownload.HowToDownloadActivity">

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/backs"/>

        <TextView
            android:id="@+id/how_to_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/how_to_download"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layouts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:tabIndicatorColor="@color/language_bg"
        app:tabGravity="fill"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:tabMaxWidth="0dp"
        app:tabMode="scrollable"
        android:stateListAnimator="@null"
        app:tabRippleColor="@null"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance1"
        app:tabSelectedTextColor="@color/language_bg"
        app:tabTextColor="@color/black" />

    <vidmatemaster.fastvideodownloader.allvideodownloader.hdvideodownloader.model.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_layouts"
        app:layout_constraintBottom_toBottomOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>