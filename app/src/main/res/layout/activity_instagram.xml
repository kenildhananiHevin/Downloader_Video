<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    tools:context="vidmatemaster.fastvideodownloader.allvideodownloader.hdvideodownloader.instagram.InstagramActivity">

    <LinearLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/backs"/>

        <TextView
            android:id="@+id/instagram_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/instagram"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <ImageView
            android:id="@+id/instagram_login"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ig"
            android:layout_margin="@dimen/_8sdp"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"/>

    </LinearLayout>

    <vidmatemaster.fastvideodownloader.allvideodownloader.hdvideodownloader.model.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        android:layout_marginBottom="@dimen/_10sdp" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <TextView
            android:id="@+id/instagram"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/instagram"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/download_paste_bg"
            android:marqueeRepeatLimit="marquee_forever"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/instagram_download"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/downloads"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/download_paste_bg"
            android:gravity="center_horizontal|center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:fontFamily="@font/poppins_medium"
            android:singleLine="true"
            android:ellipsize="marquee"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>