<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    tools:context="vidmatemaster.fastvideodownloader.allvideodownloader.hdvideodownloader.setting.SettingActivity">

    <LinearLayout
        android:id="@+id/setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/backs" />

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:ellipsize="marquee"
            android:fontFamily="@font/poppins_semibold"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/setting"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/language_click_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/setting_layout">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_language" />

        <TextView
            android:id="@+id/setting_language_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/languages"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/setting_next"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/how_to_download_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/language_click_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/language_click">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/how_to_download" />

        <TextView
            android:id="@+id/setting_how_to_download_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/how_to_download"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/how_to_download_next"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rate_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/language_click_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/how_to_download_click">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_rate" />

        <TextView
            android:id="@+id/setting_rate_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rate_or_app"
            android:textSize="@dimen/_13sdp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/rate_next"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/privacy_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/language_click_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/rate_click">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_privacy" />

        <TextView
            android:id="@+id/setting_privacy_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/privacy_next"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_next" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/language_click_bg"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/privacy_click">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_share" />

        <TextView
            android:id="@+id/setting_share_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/share_with_friends"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/share_next"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/setting_next" />

    </LinearLayout>

    <include
        android:id="@+id/native_ad_container"
        layout="@layout/ad_layout_native_medium"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/medium_native_ad_height" />

</androidx.constraintlayout.widget.ConstraintLayout>